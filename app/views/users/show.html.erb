<div class="users-index"> 
  <main class="user-header">
    <h3> <%= @user.username.capitalize()%> </h3>
    <p> Joined site <%= @user.join_date %> </p>
  </main>

  <table class="table">
    <tr> 
      <th> Work Title </th>
      <th> Created By </th>
      <th> Published </th>
      <th> Category </th>
    </tr>
  <% @user.votes.each do |vote| %>
    <% work = Work.find_by(id: vote.work_id)%>
    <tr>
      <% if !work.nil? %>
        <td> <%= link_to work.title, work_path(work) %> </td>
        <td>  <%= work.creator %></td>
        <td>  <%= work.year %></td>
        <td>  <%= work.category %></td>
      <%end%>
    </tr>
   <%end %>
  </table>
  <div class="user-show-buttons"> 
  <%= button_to "See all Users", users_path, method: :get, class:"btn-primary" %>
  <%= button_to "Back to Media List", works_path, method: :get, class:"btn-primary" %>
  </div> 
</div> 

