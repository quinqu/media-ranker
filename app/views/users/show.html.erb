<div class="users-index"> 
<div class="user-header">
<h2> <%= @user.username.capitalize()%> </h2>
<p> Joined on: <%= @user.join_date %> </p>
</div>
<table class="table table-striped table-hover">
  <tr class="thead-light"> 
    <th> Work Title </th>
    <th> Created By </th>
    <th> Published </th>
    <th> Category </th>
  </tr>
<% @user.votes.each do |vote| %>
  <% work = Work.find_by(id: vote.work_id)%>
  <tr>
    <% if !work.nil? %>
    <td> <%= link_to work.title, work_path(work) %> </td>
    <td>  <%= work.creator %></td>
    <td>  <%= work.year %></td>
    <td>  <%= work.category %></td>
    <%end%>
  </tr>

  <%end %>
</table>
</div> 

