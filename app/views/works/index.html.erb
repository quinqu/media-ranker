
<h1> List of All Works </h1> 

<body>
  <section class="flash-msg__section">
    <% flash.each do |name, message| %>
      <strong class="<%= name %>">
        <%= message %>
      </strong>
    <% end %>
  </section>

  <%= yield %>
</body>



<h3>Albums </h3>
<table>
  <tr>
      <th> Votes</th>
      <th> Title </th>
      <th> Created By </th>
      <th> Published </th>
      <th> Upvote </th>
  </tr>
  <% @albums.each do |album|%>
  <tr>
    <% vote_id = album.vote.id %>
    <td> <%= User.get_users(vote_id).length %> </td>
    <td><%= link_to album.title, work_path(album.id) %> </td>
    <td> <%= album.creator %> </td> 
    <td> <%= album.year %> </td> 
    <td> <%= link_to "Upvote", upvote_path(vote_id), method: :get %> </td> 
  </tr>
  <% end %>
</table>



