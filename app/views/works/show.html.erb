  
 <div class="works-index"> 
  <div class="works-header">
    <h2> <%= @work.title %> by <%= @work.creator %></h2> 
    <p><%= @work.category.capitalize() %></p> 
    <p> Publication Year: <%= @work.year %></p> 
    <p> <%= @work.description %></p>
  </div> 
  <div class="works-show-links"> 
    <%= link_to "Back to Media Ranks", top_media_index_path %>
    <%= link_to "Edit Media", edit_work_path(@work) %>
    <% vote = Vote.find_by(work_id: @work.id)%>
    <% user = User.find_by(id: session[:user_id])%>
    <%= link_to "Add Vote", upvote_path(vote.id), method: :get%>
    <%= link_to "Delete Media", work_path(@work), method: :delete, data: {confirm: "Are you sure you want to delete #{@work.title}?"}  %>
  </div>
 <table class="table table-striped table-hover"> 
  <tr class="thead-light"> 
    <th> User </th> 
    <th> Join Date </th> 
  </tr> 
  <% @work.vote.users.each do |user| %>
    <tr> 
      <td> <%=user.username%>  </td> 
      <td> <%=user.join_date%> </td> 
    </tr> 
  <%end%> 
 </table> 
</div> 